<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F8E700"
    tools:context="com.example.minji.ticketing.JoinActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:text="Join in"
        android:textColor="#FFFFFF"
        android:textSize="100dp" />

    <EditText
        android:id="@+id/et_joinemail"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="50dp"
        android:background="@null"
        android:hint="email@email.com"
        android:inputType="textEmailAddress"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff" />

    <View
        android:id="@+id/UnderLine4"
        android:layout_width="200dp"
        android:layout_height="2dp"
        android:layout_below="@+id/et_joinemail"
        android:layout_gravity="center"
        android:layout_marginTop="2dp"
        android:background="#FFFFFF" />

    <EditText
        android:id="@+id/et_joinpw"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="90dp"
        android:hint="password"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"
        android:inputType="textPassword"
        android:background="@null"/>
    <View
        android:id="@+id/UnderLine3"
        android:layout_width="200dp"
        android:layout_height="2dp"
        android:layout_below="@+id/et_joinpw"
        android:layout_gravity="center"
        android:layout_marginTop="2dp"
        android:background="#FFFFFF" />



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="20dp">

    <Button
        android:id="@+id/bt_joinok"
        android:text="ok"
        android:layout_width="100dp"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/bt_joinno"
        android:text="cancel"
        android:layout_width="100dp"
        android:layout_height="wrap_content" />

    </LinearLayout>
</LinearLayout>
