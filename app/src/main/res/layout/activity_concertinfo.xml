<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.minji.ticketing.ConcertinfoActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#F8E700"
        android:text="콘서트 정보"
        android:textColor="#ffffff"
        android:textSize="30dp" />
    <ImageView
        android:id="@+id/view_conimg"
        android:background="#000000"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:layout_width="162dp"
        android:layout_height="202dp"/>

    <TextView
        android:id="@+id/tv_detailcon"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:text="콘서트 상세정보"/>

    <Button
        android:id="@+id/bt_gosite"
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="예매사이트 이동" />

</LinearLayout>
