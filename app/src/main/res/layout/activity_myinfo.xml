<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F8E700" >

    <TextView
        android:id="@+id/tv_myinfoid"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="70dp"
        android:ems="10"
        android:paddingTop="50dp"
        android:text="ID:  "/>
    <View
        android:id="@+id/UnderLine0"
        android:layout_width="200dp"
        android:layout_height="2dp"
        android:layout_below="@+id/tv_myinfoid"
        android:layout_gravity="center"
        android:layout_marginTop="2dp"
        android:background="#FFFFFF" />

    <EditText
        android:id="@+id/et_myinfopw"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:ems="10"
        android:inputType="textPassword"
        android:paddingTop="10dp"
        android:background="@null"
        android:textColor="#ffffff"
        android:hint="Pw:" />
    <View
        android:id="@+id/UnderLine"
        android:layout_width="200dp"
        android:layout_height="2dp"
        android:layout_below="@+id/et_myinfopw"
        android:layout_gravity="center"
        android:layout_marginTop="2dp"
        android:background="#FFFFFF" />


    <EditText
        android:id="@+id/et_myinforepw"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:ems="10"
        android:inputType="textPassword"
        android:paddingTop="10dp"
        android:background="@null"
        android:textColor="#ffffff"
        android:hint="Pw:" />
    <View
        android:id="@+id/UnderLine2"
        android:layout_width="200dp"
        android:layout_height="2dp"
        android:layout_below="@+id/et_myinforepw"
        android:layout_gravity="center"
        android:layout_marginTop="2dp"
        android:background="#FFFFFF" />

    <EditText
        android:id="@+id/et_myinfoph"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:ems="10"
        android:inputType="phone"
        android:paddingTop="10dp"
        android:background="@null"
        android:textColor="#ffffff"
        android:hint="Phone :" />
    <View
        android:id="@+id/UnderLine3"
        android:layout_width="200dp"
        android:layout_height="2dp"
        android:layout_below="@+id/et_myinfoph"
        android:layout_gravity="center"
        android:layout_marginTop="2dp"
        android:background="#FFFFFF" />

    <Button
        android:id="@+id/btn_myinfoch"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="50dp"
        android:text="정보 수정"


        />

</LinearLayout>
