<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.minji.ticketing.ServertimeActivity">

    <View
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@mipmap/servertime_title_ticketing"
        android:text="서버시간확인"
        android:textColor="#ffffff"
        android:textSize="30dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical">

        <TextView
            android:padding="20dp"
            android:textSize="25dp"
            android:id="@+id/tv_url"
            android:text="http://"
            android:layout_width="match_parent"
            android:layout_height="100dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="vertical">

            <TextView
                android:layout_marginLeft="20dp"
                android:textSize="25dp"
                android:id="@+id/tv_serverDate"
                android:layout_width="match_parent"
                android:layout_height="50dp" />

            <TextView
                android:layout_marginLeft="20dp"
                android:textSize="25dp"
                android:id="@+id/tv_serverTime"
                android:layout_width="match_parent"
                android:layout_height="50dp" />
        </LinearLayout>
    </LinearLayout>

    <EditText
        android:layout_marginLeft="20dp"
        android:id="@+id/et_url"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@null"
        android:hint="url을 입력해주세요"
        />

    <Button
        android:id="@+id/bt_searchtime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#F8e700"
        android:text="시간 확인"
        android:textColor="#ffffff" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F8e700">

        <Button
            android:id="@+id/btn_interpark"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/btn_auction"
            android:layout_marginLeft="41dp"
            android:layout_marginStart="41dp"
            android:layout_marginTop="35dp"
            android:background="#F8e700"
            android:text="인터파크티켓"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btn_melon"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="#F8e700"
            android:text="멜론티켓"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btn_auction"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="25dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="16dp"
            android:layout_toEndOf="@+id/btn_interpark"
            android:layout_toRightOf="@+id/btn_interpark"
            android:background="#F8e700"
            android:text="옥션티켓"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btn_yes24"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_alignBaseline="@+id/btn_interpark"
            android:layout_alignBottom="@+id/btn_interpark"
            android:layout_alignLeft="@+id/btn_auction"
            android:layout_alignStart="@+id/btn_auction"
            android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp"
            android:background="#F8e700"
            android:text="YES24티켓"
            android:textColor="#FFFFFF" />


    </RelativeLayout>

</LinearLayout>
